<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/negro"
    tools:context=".VideoConfigurado">


    <VideoView
        android:id="@+id/videoConfigurado"
        android:layout_width="411dp"
        android:layout_height="524dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonReinicio" />

    <Button
        android:id="@+id/buttonReinicio"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="55dp"
        android:background="@drawable/repetir100"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonPausa"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="45dp"
        android:background="@drawable/pausa100"
        app:layout_constraintStart_toEndOf="@+id/buttonReinicio"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonStop"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="59dp"
        android:layout_marginEnd="42dp"
        android:background="@drawable/stop100"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonPausa"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>