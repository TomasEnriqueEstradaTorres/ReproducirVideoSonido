<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lytLayout"
    android:background="@drawable/toast_drawable"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dip"  
    android:gravity="center">

    <!--
     Esto es necesario para poder personalizar el toast
     Esto es una forma de usar colores definidos por el sistema
     @android:color/holo_green_light
      -->
    <TextView
        android:id="@+id/mensajeToast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="15dip"
        android:paddingRight="15dip"
        android:drawablePadding="5dp"
        android:textSize="25sp"
        android:textColor="@color/azul1"/>

</LinearLayout>